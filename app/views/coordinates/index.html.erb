<%- model_class = Coordinate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:word_id) %></th>
      <th><%= model_class.human_attribute_name(:test_suite_id) %></th>
      <th><%= model_class.human_attribute_name(:x_coordinate) %></th>
      <th><%= model_class.human_attribute_name(:y_coordinate) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @coordinates.each do |coordinate| %>
      <tr>
        <td><%= link_to coordinate.id, coordinate_path(coordinate) %></td>
        <td><%= coordinate.word_id %></td>
        <td><%= coordinate.test_suite_id %></td>
        <td><%= coordinate.x_coordinate %></td>
        <td><%= coordinate.y_coordinate %></td>
        <td><%=l coordinate.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_coordinate_path(coordinate), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      coordinate_path(coordinate),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_coordinate_path,
            :class => 'btn btn-primary' %>
