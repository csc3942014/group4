<%- model_class = Coordinate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:word_id) %>:</strong></dt>
  <dd><%= @coordinate.word_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:x_coordinate) %>:</strong></dt>
  <dd><%= @coordinate.x_coordinate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:y_coordinate) %>:</strong></dt>
  <dd><%= @coordinate.y_coordinate %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              coordinates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_coordinate_path(@coordinate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              coordinate_path(@coordinate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
