<%- model_class = UserRole -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:role_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%=t ' ' %></th>
    </tr>
  </thead>
  <tbody>
    <% @user_roles.each do |user_role| %>
      <tr>
        <td><%= link_to user_role.id, user_role_path(user_role) %></td>
        <td><%= user_role.name %></td>
        <td><%= user_role.role_id %></td>
        <td><%= user_role.user_id %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_role_path(user_role),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_role_path,
            :class => 'btn btn-primary' %>
