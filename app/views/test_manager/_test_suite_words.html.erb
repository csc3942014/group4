<table class="table table-striped">

    <% @words.each do |word| %>
        <tr>
            <td><%= word.word %></td>
            <td align="right">
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                        edit_word_path(word), 
                                        :class => 'btn btn-default btn-xs' %>

                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                           word_path(word),
                                           :method => :delete,
                                           :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                           :class => 'btn btn-danger btn-xs' %>
            </td>
        </tr>
    <% end %>
    
    <tr>
        <%= form_for @word do |f| %>
        <td><%= f.text_field :word, :placeholder=>"Add a new word" %></td>
            <td align="right">
                
                <%= button_to "Create", 
                     { :controller => :words, :action=> :create }, 
                     { :remote => true, :id => 'create_word' } 
                 %>
                
            </td>
        <% end %>
    </tr>
    
    
    
    
</table>