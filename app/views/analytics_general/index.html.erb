<!DOCTYPE html>
<html>

    <head>
        <title></title>
        <script src='//cdnjs.cloudflare.com/ajax/libs/Chart.js/0.2.0/Chart.min.js'></script>
    </head>

    <body>
   
    <h1>Analytics</h1>
    <h4>Data Overview</h4>

    <center>
        <nav class="segmented-button">
            <input type="radio" name="seg-1" value="General" id="seg-General" checked>
            <label for="seg-General" class="first">General</label>
            <input type="radio" name="seg-2" value="Specific Tests" id="seg-Specific">
            <label for="seg-Specific">Specific Tests</label>
            <input type="radio" name="seg-3" value="Comparative" id="seg-Compare">
            <label for="seg-Compare" class="last">Comparative</label>
        </nav>
    </center>

    <!-- Detect when a button on the segmented control is clicked -->
    <script type="text/javascript">
        $("input[name=seg-2]").click(function(){
            window.location.href = '/analytics_specific/index';
        });
        $("input[name=seg-3]").click(function(){
            window.location.href = '/analytics_comparatif/index';
        });
        $('.segmented-button label').click(function(evt){
            evt.stopPropagation();
            window.location.href = '/home_page/index';
        });
    </script>
        

        
    <!-- For each keyboard in the database -->
    <div style='overflow-x:scroll;overflow-y:scroll;width:100%;height:500px'>
        <div id="row">
        <% for @kbrd in @kbrds %>
            <div class="column">
                <div class="chartContainer">
                    <h3><%= @kbrd.name %></h3>
                    <br>
                    <!-- <% for @t in @ts %> -->
                        <!-- bar chart canvas element -->
                        <canvas id="income" width="10" height="10"></canvas>
                        <script>
                            // bar chart data
                            var barData = {
                                labels : ["Test Suite 1","TS 2","Double Letters","TS 5","TS 6","TS 7"],
                                datasets : [
                                {
                                    fillColor : "#48A497",
                                    strokeColor : "#48A4D1",
                                    data : [456,479,324,569,702,600]
                                }
                                ]
                            }
                            // get bar chart canvas
                            var income = document.getElementById("income").getContext("2d");
                            // draw bar chart
                            new Chart(income).Bar(barData);
                        </script>
                    <!-- <% end %> -->
                </div>
            </div>
        <% end %>
        </div>
    </div>

    </body>
</html>