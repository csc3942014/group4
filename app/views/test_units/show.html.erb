<%- model_class = TestUnit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:test_session_id) %>:</strong></dt>
  <dd><%= @test_unit.test_session_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:word_id) %>:</strong></dt>
  <dd><%= @test_unit.word_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
  <dd><%= @test_unit.start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @test_unit.end_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_backspace) %>:</strong></dt>
  <dd><%= @test_unit.num_backspace %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              test_units_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_test_unit_path(@test_unit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              test_unit_path(@test_unit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
