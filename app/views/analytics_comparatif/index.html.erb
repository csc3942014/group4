                    <option value="keyboards">Keyboards</option>
                    <option value="tests">Test Suites</option>
                    <option value="attributes">User Attributes</option>
                </select></h4>
            </td>
            <td><h1>&nbsp;</h1></td><td><h1>&nbsp;</h1></td><td><h1>&nbsp;</h1></td>
            <td>
                
            </td>
            <td>
                <button class="btn btn-primary" type="submit" onclick="getSelectedValue();">apply filters</button>
            </td>
        </tr>
    </table>

