<!DOCTYPE HTML>
<!-- analytics_comparative page -->
<html>
<head>
    <title>AR UTARS Analytics  |  Comparative</title>
    <script type="text/javascript"> 
        function getSelectedValue() {
            var sec = document.getElementById('secondary');  
            var secFilter = sec.options[sec.selectedIndex].value;
            var sec2 = document.getElementById('primary');
            var primFilter = sec2.options[sec2.selectedIndex].value;
            applyMainFilter(secFilter, primFilter);
