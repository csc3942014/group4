<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <script type="text/javascript"> 
        function getSelections(typef) {
            var sec = document.getElementById('first');  
            var kbrd1Name = sec.options[sec.selectedIndex].value;
            var sec2 = document.getElementById('second');
            var kbrd2Name = sec2.options[sec2.selectedIndex].value;
            applySubFilterKb(kbrd1Name, kbrd2Name, typef);
        }  
        
    </script>
    <script>
        $(document).ready(init);

        function init() {
            // Add onclick function to every checkbox with name "bedrooms".
            $('input[name=bedrooms]').click(showCheckedValues);
        }

            function showCheckedValues(typef) {
                // Gather all values of checked checkboxes with name "atrb".
                var checked = $('input[name=atrb]:checked').map(function() {
                    return this.value;
                }).get();
                alert("There are no users in the system with these attributes.");
                applySubFilterAttributes(checked, typef);
            }
    </script>
</head>
<body>
    <center>
    <table>
        <tr><th>User Attributes</th></tr>
        <tr>
            <td>
                <form>
                    <% allAttributes.each do |atrb| %>
                        <input type="checkbox" name="atrb" value="<%= atrb.id %>"><%= atrb.name %><br>
                    <% end %>
                </form>
            </td>
            <td></td><td> <h1> &nbsp; </h1></td><td></td>
            <td>
                    <% if typeF.to_s === 'correctness' %>
                        <button class="btn btn-primary btn-xs" type="submit" onclick="showCheckedValues('correctness');">refresh data</button>
                    <% elsif typeF.to_s === 'speed' %>
                        <button class="btn btn-primary btn-xs" type="submit" onclick="showCheckedValues('speed');">refresh data</button>
                    <% else %>
                        <button class="btn btn-primary btn-xs" type="submit" onclick="showCheckedValues('perceptions');">refresh data</button>
                    <% end %>
            </td>
        </tr>
    </table>
    </center>
</body>
</html>