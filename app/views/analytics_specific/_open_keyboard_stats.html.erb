<html>
<head>
    <!-- using google chart powered by chartkick -->
    <script src="//www.google.com/jsapi"></script>
</head>
    
    

<!-- fill the pie chart hashmap -->
<% keyboard.each do |kb| %>
    <h3><%= kb.name %> Keyboard</h3>
    <table>
        <tr>
            <td>
                <!-- replace the hardcoded values for column_chart with '(dcData)' -->
                <div class="durationChartContainer">
                    <center><h5>Average Typing Duration (in seconds)</h5></center>
                    <%= column_chart ({'1' => 2.0, '2' => 5.0, '3' => 7.4, '4' => 10.0, '5' => 12.2, '6' => 15.0, '7' => 19.4, '8' => 24.2, '9' => 27.0, '10+' => 35.0}) %>
                    <center><h6>Number of Letters in Word</h6></center>
                </div>
            </td>
            <td>
                <!-- replace the hardcoded values for pie_chart with '(pcData)' -->
                <div class="pieChartContainer">
                    <center><h5>Correct Vs. Incorrect User Input</h5></center>
                    <%= pie_chart('Correct' => 55, 'Incorrect' => 22) %>
                </div>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td>
                <div class="userPAlign">
                    <div class="userPerceptionsContainer">
                        <center><h3>Average User Perceptions</h3></center>
                        <center>
                            <table class="two">
                                <tr>
                                    <td>
                                        <center><h4>Accuracy</h4></center>
                                    </td>
                                    <td>
                                       <center><h4>Ease of Use</h4></center>
                                    </td>
                                    <td>
                                        <div>
                                            <center><h4>Fun Factor</h4></center>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <img src="/assets/accuracy_icon-01.png" alt="Accuracy Rating" width="125" height="125">
                                
                                    </td>
                                    <td>
                                        <img src="/assets/ease_icon-01.png" alt="Ease Rating" width="125" height="125">
                                    </td>
                                    <td>
                                        <div>
                                            <img src="/assets/fun_icon-01.png" alt="Fun Rating" width="125" height="125">
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <center><h4>4 / 10</h4></center>
                                    </td>
                                    <td>
                                        <center><h4>4 / 10</h4></center>
                                    </td>
                                    <td>
                                        <center><h4>4 / 10</h4></center>
                                    </td>
                                </tr>
                            </table>
                        </center>
                    </div>
                </div>
            </td>
        </tr>
    </table>
<% end %>
    
</html>

