<h3>Keyboards</h3>
<table width="100%">
    <tr>
        <td width="90%" valign="center">
            <div style='overflow-x:scroll;overflow-y:scroll;width:100%;height:252px', id="scrollie">
                <h1> </h1>
                <table class="table table-striped" id="theTbl">
                    <% @kbrds.each do |kb| %>
                        <tr>
                            <td onclick="loadKeyboardData(this, <%= kb.id %>)"><h4><%= kb.name %></h4></td>
                            <td align="right"><h4><i class="chevron"></i></h4></td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </td>
    </tr>
</table>