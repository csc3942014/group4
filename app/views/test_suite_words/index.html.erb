<%- model_class = TestSuiteWord -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:test_suite_id) %></th>
      <th><%= model_class.human_attribute_name(:word_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t ' ' %></th>
    </tr>
  </thead>
  <tbody>
    <% @test_suite_words.each do |test_suite_word| %>
      <tr>
        <td><%= link_to test_suite_word.id, test_suite_word_path(test_suite_word) %></td>
        <td><%= test_suite_word.test_suite_id %></td>
        <td><%= test_suite_word.word_id %></td>
        <td><%=l test_suite_word.created_at %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      test_suite_word_path(test_suite_word),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_test_suite_word_path,
            :class => 'btn btn-primary' %>
