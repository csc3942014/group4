<center>
<nav class="segmented-button">
  <input type="radio" name="seg-1" value="user" id="seg-user" checked>
  <label for="seg-user" class="first">User</label>
  <input type="radio" name="seg-1" value="admin" id="seg-admin">
  <label for="seg-admin" class="last">Admin</label>
</nav>
</center>



<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => session_path(resource_name)) do |f| %>
<h2 class:"form-signin-heading">Sign Up</h2>
    
<div>
           <div style="margin:left">
              <div style="padding:5px 5px 5px 0px"><%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class:"input-block-level", placeholder:"Email address"%></div>
    
              <div style="padding:5px 5px 5px 0px"><%= f.label :password %><br />
              <%= f.password_field :password, class:"input-block-level", autocomplete: "off", placeholder:"Password" %></div>
    
    
              <div style="padding:5px 5px 5px 0px"><%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, class:"input-block-level", autocomplete: "off", placeholder:"Retype Password" %></div>
              </div>

            <fieldset>
            <div style="margin:right" align="left">
                <h3>Attributes</h3>
                <input type="checkbox" name="lefthanded" value="Left Handed">Left-Handed<br>
                <input type="checkbox" name="righthanded" value="Right Handed">Right-Handed<br>
                <input type="checkbox" name="amb" value="Amb">Ambidextrous<br>
                <input type="checkbox" name="MD" value="MD">Muscular Dystrophy<br>
                <input type="checkbox" name="HI" value="HI">Hearing Impaired<br>
            </div>    
            </fieldset>
</div>

<%= f.submit "Sign Up", class:"btn btn-large btn-primary" %>
              
<%= render "devise/shared/links" %>

<% end %>


